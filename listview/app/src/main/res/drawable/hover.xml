<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true"><!--沒點選按鈕的時候-->
        <shape android:shape="rectangle"><!--按鈕形狀-->
            <corners android:radius="30dip"/>
            <solid android:color="#FFFFFF" /><!--按鈕背景填充色-->
        </shape>
    </item>
    <!--當點選按鈕的時候變為藍色-->
    <item ><!--沒點選按鈕的時候-->
        <shape android:shape="rectangle"><!--按鈕形狀-->
            <corners android:radius="30dip"/>
            <solid android:color="#76ba8a" /><!--按鈕背景填充色-->
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
</selector>